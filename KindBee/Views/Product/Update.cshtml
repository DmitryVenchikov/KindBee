@model KindBee.DB.DBModels.Product;
@{
    ViewData["Title"] = "Обновление продукта";
}
<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<div class="login-box">
  <form asp-action="Update" asp-controller="Product" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"> </div>
      <div class="user-box">
            <input type="hidden" asp-for="@Model.Id" />
    </div>
    <div class="user-box">
      <input type="text" asp-for="Name" placeholder="Наименование" />
            <label><span asp-validation-for="Name" /></label>
    </div>
      
    <div class="user-box">
       <input type="text" asp-for="Description" placeholder="Введите описание продукта" />
            <label><span asp-validation-for="Description" /></label>
    </div>
    <div class="user-box">
            <label>Введите количество, имеющееся на складе</label>
       <input type="number" asp-for="Quantity"/>
            <label><span asp-validation-for="Quantity" /></label>
    </div>
        <div class="user-box">
            <label>Введите дату изготовления продукта</label>
            <input type="datetime-local" asp-for="DateOfManufacture" />
            <label><span asp-validation-for="DateOfManufacture" /></label>
        </div>
         <div class="user-box">
            <label>Введите стоимость товара</label>
       <input type="number" asp-for="Price"/>
            <label><span asp-validation-for="Price" /></label>
    </div>
            <button type="submit" class="registerbtn">Войти</button>
             <a asp-action="Update" asp-controller="Product">Добавить продукт</a>
  </form>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}





