@model KindBee.Models.CustomerRegisterVM
@{
    ViewData["Title"] = "";
}
<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<div class="login-box">
    <h2>Регистрация</h2>
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"> </div>

        <div class="user-box">
    <input type="text" asp-for="Name" placeholder="Введите имя"/>
            <label><span asp-validation-for="Name" /></label>
    </div>
@*    <div class="user-box">
    <input type="text" asp-for="Middlename" placeholder="Введите отчество"/>
            <label><span asp-validation-for="Middlename" /></label>
    </div>

   <div class="user-box">
    <input type="text" asp-for="Lastname" placeholder="Введите фамилию"/>
            <label><span asp-validation-for="Lastname" /></label>
    </div>*@

     <div class="user-box">
    <input type="text" asp-for="PhoneNumber" placeholder="Введите номер телефона"/>
            <label><span asp-validation-for="PhoneNumber" /></label>
    </div>

        <div class="user-box">
    <input type="text" asp-for="Login" placeholder="Введите логин"/>
            <label><span asp-validation-for="Login" /></label>
    </div>

        <div class="user-box">
    <input type="text" asp-for="Password" placeholder="Введите пароль"/>
            <label><span asp-validation-for="Password" /></label>
    </div>

        <div class="user-box">
    <input type="text" asp-for="ConfirmPassword" placeholder="Введите пароль повторно"/>
            <label><span asp-validation-for="ConfirmPassword" /></label>
    </div>

        <button type="submit" class="registerbtn">Зарегистрироваться</button>
     <a asp-action="Login" asp-controller="Account">Уже есть аккаунт? Жми сюда</a>
   </form>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

 

